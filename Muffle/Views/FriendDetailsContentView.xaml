<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Muffle.Views.FriendDetailsContentView"
			 x:Name="DynamicFriendContent">
	<StackLayout>
		<Grid RowDefinitions="*,*,*,Auto" ColumnDefinitions="1*,3*,Auto">
            <!--<ImageButton Grid.Column="0" Source="Resources\Images\tom.jpg" Width="40" Height="40"/>-->
            <Label Grid.Column="1" Grid.Row="0" Text="{Binding Name}"/>

            <Label Grid.Column="1" Grid.Row="1" Text="{Binding Description}"/>
        </Grid>
	</StackLayout>
</ContentView>
