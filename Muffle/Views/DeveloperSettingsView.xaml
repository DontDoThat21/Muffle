<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Muffle.ViewModels"
             x:Class="Muffle.Views.DeveloperSettingsView"
             x:DataType="viewmodels:DeveloperSettingsViewModel"
             BackgroundColor="#303030">

    <Grid RowDefinitions="Auto,*" Padding="20" RowSpacing="15">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Developer Settings"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"/>
            <Label Text="Debug mode, WebSocket inspector, and developer tools"
                   FontSize="14"
                   TextColor="LightGray"/>
        </VerticalStackLayout>

        <!-- Content Area -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">

                <!-- Status Message -->
                <Label Text="{Binding StatusMessage}"
                       IsVisible="{Binding HasStatusMessage}"
                       HorizontalOptions="Center"
                       TextColor="Orange"
                       FontSize="14"
                       FontAttributes="Bold"/>

                <!-- Processing Indicator -->
                <ActivityIndicator IsVisible="{Binding IsProcessing}"
                                   IsRunning="{Binding IsProcessing}"
                                   Color="White"
                                   HorizontalOptions="Center"/>

                <!-- Debug Mode -->
                <Frame Padding="15"
                       BorderColor="#424242"
                       BackgroundColor="#252525"
                       CornerRadius="8"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="4" VerticalOptions="Center">
                                <Label Text="Debug Mode"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                                <Label Text="Enables verbose logging and diagnostic output throughout the app"
                                       FontSize="12"
                                       TextColor="Gray"/>
                            </VerticalStackLayout>
                            <Switch Grid.Column="1"
                                    IsToggled="{Binding DebugMode}"
                                    OnColor="#7289DA"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- WebSocket Inspector -->
                <Frame Padding="15"
                       BorderColor="#424242"
                       BackgroundColor="#252525"
                       CornerRadius="8"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="4" VerticalOptions="Center">
                                <Label Text="WebSocket Inspector"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                                <Label Text="Logs all incoming and outgoing WebSocket messages for inspection"
                                       FontSize="12"
                                       TextColor="Gray"/>
                            </VerticalStackLayout>
                            <Switch Grid.Column="1"
                                    IsToggled="{Binding WebSocketInspector}"
                                    OnColor="#7289DA"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Dev Tools -->
                <Frame Padding="15"
                       BorderColor="#424242"
                       BackgroundColor="#252525"
                       CornerRadius="8"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="4" VerticalOptions="Center">
                                <Label Text="Enable Dev Tools"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                                <Label Text="Exposes additional UI overlays and diagnostics panels for development"
                                       FontSize="12"
                                       TextColor="Gray"/>
                            </VerticalStackLayout>
                            <Switch Grid.Column="1"
                                    IsToggled="{Binding EnableDevTools}"
                                    OnColor="#7289DA"
                                    VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Save Button -->
                <Button Text="Save Developer Settings"
                        Command="{Binding SaveDeveloperSettingsCommand}"
                        BackgroundColor="#7289DA"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="15,10"
                        HorizontalOptions="FillAndExpand"/>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentView>
