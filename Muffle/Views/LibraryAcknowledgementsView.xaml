<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Muffle.ViewModels"
             xmlns:models="clr-namespace:Muffle.Data.Models;assembly=Muffle.Data"
             xmlns:converters="clr-namespace:Muffle.Converters"
             x:Class="Muffle.Views.LibraryAcknowledgementsView"
             x:DataType="viewmodels:LibraryAcknowledgementsViewModel"
             BackgroundColor="#303030">

    <Grid RowDefinitions="Auto,*" Padding="20" RowSpacing="15">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Library Acknowledgements"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"/>
            <Label Text="Muffle is built on the shoulders of great open-source libraries. Thank you to all contributors."
                   FontSize="14"
                   TextColor="LightGray"/>
        </VerticalStackLayout>

        <!-- Library List -->
        <ScrollView Grid.Row="1">
            <CollectionView ItemsSource="{Binding Libraries}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:LibraryAcknowledgement">
                        <Frame Padding="15"
                               Margin="0,0,0,10"
                               BorderColor="#424242"
                               BackgroundColor="#252525"
                               CornerRadius="8"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="6">

                                <!-- Name + License badge -->
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                    <Label Grid.Column="0"
                                           Text="{Binding Name}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           VerticalOptions="Center"/>
                                    <Frame Grid.Column="1"
                                           Padding="8,4"
                                           CornerRadius="4"
                                           HasShadow="False"
                                           BackgroundColor="#7289DA"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End">
                                        <Label Text="{Binding License}"
                                               FontSize="11"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Frame>
                                </Grid>

                                <!-- Version -->
                                <Label Text="{Binding Version, StringFormat='Version {0}'}"
                                       FontSize="12"
                                       TextColor="Gray"/>

                                <!-- Description -->
                                <Label Text="{Binding Description}"
                                       FontSize="13"
                                       TextColor="LightGray"/>

                                <!-- Divider -->
                                <BoxView HeightRequest="1"
                                         Color="#424242"
                                         Margin="0,2,0,2"/>

                                <!-- URL -->
                                <Label Text="{Binding Url}"
                                       FontSize="12"
                                       TextColor="#7289DA"
                                       TextDecorations="Underline"/>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

    </Grid>

</ContentView>
