<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Muffle.ViewModels"
             xmlns:models="clr-namespace:Muffle.Data.Models;assembly=Muffle.Data"
             x:Class="Muffle.Views.EmojiPickerView"
             x:DataType="viewmodels:EmojiPickerViewModel">

    <CollectionView ItemsSource="{Binding Emojis}">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="4" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Emoji">
                <Button Text="{Binding Unicode}"
                        FontSize="22"
                        BackgroundColor="Transparent"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:EmojiPickerViewModel}}, Path=SelectEmojiCommand}"
                        CommandParameter="{Binding .}"
                        WidthRequest="56"
                        HeightRequest="56" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentView>
