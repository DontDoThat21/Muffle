<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Muffle.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Grid ColumnDefinitions="1*,8*" VerticalOptions="FillAndExpand" BackgroundColor="Blue" HorizontalOptions="FillAndExpand" RowSpacing="15" RowDefinitions="1*,1*,1*,1*,1*,1*">
                <CollectionView ItemsSource="{Binding Servers}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Grid.Column="0">
                                <StackLayout>
                                    <Button Text="{Binding Name}" Command="{Binding SelectServerCommand}" CommandParameter="{Binding Servers[0]}" Clicked="ServerButton_OnClicked">

                                    </Button>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>
            <ContentView x:Name="DynamicServerContent"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
