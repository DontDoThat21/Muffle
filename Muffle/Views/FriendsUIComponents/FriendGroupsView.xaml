<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Muffle.ViewModels"
             xmlns:models="clr-namespace:Muffle.Data.Models;assembly=Muffle.Data"
             x:Class="Muffle.Views.FriendGroupsView"
             x:DataType="viewmodels:FriendGroupsViewModel"
             BackgroundColor="#303030">

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="20" RowSpacing="15">

        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
            <VerticalStackLayout Grid.Column="0" Spacing="4">
                <Label Text="Friend Groups"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label Text="Organize your friends and start group calls"
                       FontSize="13"
                       TextColor="LightGray"/>
            </VerticalStackLayout>

            <Button Grid.Column="1"
                    Text="+ New Group"
                    Command="{Binding CreateGroupCommand}"
                    BackgroundColor="#43B581"
                    TextColor="White"
                    CornerRadius="6"
                    Padding="16,10"
                    VerticalOptions="Center"/>
        </Grid>

        <!-- Status Message -->
        <Label Grid.Row="1"
               Text="{Binding StatusMessage}"
               IsVisible="{Binding HasStatusMessage}"
               HorizontalOptions="Center"
               TextColor="LightGray"
               FontSize="14"/>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="2"
                           IsVisible="{Binding IsLoading}"
                           IsRunning="{Binding IsLoading}"
                           Color="White"
                           HorizontalOptions="Center"/>

        <!-- Groups List -->
        <ScrollView Grid.Row="3">
            <VerticalStackLayout Spacing="12">

                <Label Text="No groups yet. Click '+ New Group' to get started."
                       IsVisible="{Binding HasGroups, Converter={StaticResource InverseBoolConverter}}"
                       HorizontalOptions="Center"
                       TextColor="Gray"
                       FontSize="14"
                       Margin="0,20,0,0"/>

                <CollectionView ItemsSource="{Binding Groups}" IsVisible="{Binding HasGroups}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:FriendGroup">
                            <Frame Padding="0"
                                   Margin="0,0,0,12"
                                   BorderColor="#424242"
                                   BackgroundColor="#252525"
                                   CornerRadius="8"
                                   HasShadow="False">
                                <VerticalStackLayout Spacing="0">

                                    <!-- Group Header Row -->
                                    <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto"
                                          ColumnSpacing="8"
                                          Padding="15,12">

                                        <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="2">
                                            <Label Text="{Binding Name}"
                                                   FontSize="17"
                                                   FontAttributes="Bold"
                                                   TextColor="White"/>
                                            <Label FontSize="12" TextColor="LightGray">
                                                <Label.Text>
                                                    <MultiBinding StringFormat="{}{0} member(s) Â· Room: {1}">
                                                        <Binding Path="Members.Count"/>
                                                        <Binding Path="RoomKey" StringFormat="{}{0:N8}"/>
                                                    </MultiBinding>
                                                </Label.Text>
                                            </Label>
                                        </VerticalStackLayout>

                                        <!-- Group Voice Call Button -->
                                        <Button Grid.Column="1"
                                                Text="&#x260E; Group Call"
                                                BackgroundColor="#2C9ACE"
                                                TextColor="White"
                                                CornerRadius="4"
                                                FontSize="12"
                                                Padding="10,6"
                                                VerticalOptions="Center"
                                                Clicked="GroupCallButton_OnClicked"/>

                                        <!-- Add Friend Button -->
                                        <Button Grid.Column="2"
                                                Text="+ Friend"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:FriendGroupsViewModel}}, Path=AddFriendToGroupCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#43B581"
                                                TextColor="White"
                                                CornerRadius="4"
                                                FontSize="12"
                                                Padding="10,6"
                                                VerticalOptions="Center"/>

                                        <!-- Rename Button -->
                                        <Button Grid.Column="3"
                                                Text="Rename"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:FriendGroupsViewModel}}, Path=RenameGroupCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#7289DA"
                                                TextColor="White"
                                                CornerRadius="4"
                                                FontSize="12"
                                                Padding="10,6"
                                                VerticalOptions="Center"/>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="4"
                                                Text="Delete"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:FriendGroupsViewModel}}, Path=DeleteGroupCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#F04747"
                                                TextColor="White"
                                                CornerRadius="4"
                                                FontSize="12"
                                                Padding="10,6"
                                                VerticalOptions="Center"/>
                                    </Grid>

                                    <!-- Separator -->
                                    <BoxView HeightRequest="1" BackgroundColor="#424242" Margin="15,0"/>

                                    <!-- Members List -->
                                    <CollectionView ItemsSource="{Binding Members}" Margin="15,10,15,12">
                                        <CollectionView.EmptyView>
                                            <Label Text="No members yet. Use '+ Friend' to add someone."
                                                   TextColor="Gray"
                                                   FontSize="12"
                                                   Margin="0,4,0,4"/>
                                        </CollectionView.EmptyView>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="models:Friend">
                                                <Grid ColumnDefinitions="Auto,*,Auto"
                                                      ColumnSpacing="10"
                                                      Padding="0,6">

                                                    <!-- Avatar initial -->
                                                    <Frame Grid.Column="0"
                                                           WidthRequest="36"
                                                           HeightRequest="36"
                                                           CornerRadius="18"
                                                           Padding="0"
                                                           HasShadow="False"
                                                           BackgroundColor="#7289DA">
                                                        <Label Text="{Binding Name, StringFormat='{0:C1}'}"
                                                               FontSize="15"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               TextColor="White"/>
                                                    </Frame>

                                                    <!-- Name -->
                                                    <Label Grid.Column="1"
                                                           Text="{Binding Name}"
                                                           FontSize="14"
                                                           TextColor="White"
                                                           VerticalOptions="Center"/>

                                                    <!-- Remove -->
                                                    <Button Grid.Column="2"
                                                            Text="Remove"
                                                            BackgroundColor="#424242"
                                                            TextColor="LightGray"
                                                            CornerRadius="4"
                                                            FontSize="11"
                                                            Padding="8,4"
                                                            VerticalOptions="Center"
                                                            Clicked="RemoveFriendButton_OnClicked"/>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>

                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Refresh -->
                <Button Text="Refresh"
                        Command="{Binding RefreshCommand}"
                        BackgroundColor="#7289DA"
                        TextColor="White"
                        CornerRadius="4"
                        Padding="0,12"
                        Margin="0,8,0,0"/>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentView>
