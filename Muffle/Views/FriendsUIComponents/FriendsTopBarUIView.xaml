<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Muffle.Views.FriendsTopBarUIView">
    <Grid ColumnDefinitions="2.65*,2.45*,1.2*,2.8*,2.7*,3.35*,1.2*,5.5*">
        <Button BackgroundColor="#303030" TextColor="GhostWhite" Grid.Column="0" Text="Friends"/>
        <Button BackgroundColor="#303030" TextColor="GhostWhite" Grid.Column="1" Text="Online"/>
        <Button BackgroundColor="#303030" TextColor="GhostWhite" Grid.Column="2" Text="All"/>
        <Button BackgroundColor="#303030" TextColor="GhostWhite" Grid.Column="3" Text="Pending" Clicked="PendingButton_OnClicked"/>
        <Button BackgroundColor="#303030" TextColor="GhostWhite" Grid.Column="4" Text="Blocked" Clicked="BlockedButton_OnClicked"/>
        <Button Clicked="FriendAddButton_OnClicked" BackgroundColor="Green" TextColor="GhostWhite" Grid.Column="5" Text="Add Friend"/>
        <Button BackgroundColor="#303030" TextColor="GhostWhite" Grid.Column="7" Text="New Chat Group"/>
    </Grid>
</ContentView>
