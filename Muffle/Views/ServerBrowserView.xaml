<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Muffle.ViewModels"
             xmlns:models="clr-namespace:Muffle.Data.Models;assembly=Muffle.Data"
             x:Class="Muffle.Views.ServerBrowserView"
             x:DataType="viewmodels:ServerBrowserViewModel"
             Title="Server Browser">

    <Grid RowDefinitions="Auto,*" Padding="16">

        <!-- Search bar -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" ColumnSpacing="8" Margin="0,0,0,12">
            <SearchBar Grid.Column="0"
                       Placeholder="Search public servers..."
                       Text="{Binding SearchText}"
                       SearchCommand="{Binding SearchCommand}" />
            <Button Grid.Column="1"
                    Text="Search"
                    Command="{Binding SearchCommand}"
                    BackgroundColor="#7289DA"
                    TextColor="White"
                    CornerRadius="4"
                    Padding="12,0" />
        </Grid>

        <!-- Server list -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding PublicServers}"
                        EmptyView="No public servers found.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Server">
                    <Frame Padding="14"
                           Margin="0,4,0,4"
                           BorderColor="LightGray"
                           CornerRadius="8"
                           HasShadow="False">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">

                            <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="4">
                                <Label Text="{Binding Name}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Description}"
                                       FontSize="13"
                                       TextColor="Gray"
                                       LineBreakMode="TailTruncation" />
                            </VerticalStackLayout>

                            <Button Grid.Column="1"
                                    Text="Join"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ServerBrowserViewModel}}, Path=JoinServerCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="#43B581"
                                    TextColor="White"
                                    CornerRadius="4"
                                    Padding="16,8"
                                    VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
